<?xml version="1.0"?>
<robot name="diff_base">
	<material name="gray"><color rgba="0.25 0.35 0.45 1"/></material>
	<material name="black"><color rgba="0.1 0.1 0.1 1"/></material>

	<link name="base_link">
		<!-- position chassis so its bottom sits on top of the wheel tops -->
		<visual><origin xyz="0 0 -0.03" rpy="0 0 0"/><geometry><box size="0.45 0.32 0.08"/></geometry><material name="gray"/></visual>
		<collision><origin xyz="0 0 -0.03" rpy="0 0 0"/><geometry><box size="0.45 0.32 0.08"/></geometry></collision>
		<inertial><mass value="8.0"/><inertia ixx="0.1" iyy="0.1" izz="0.1"/></inertial>
	</link>

	<link name="left_wheel">
		<!-- larger wheel: radius increased to 0.07 -->
		<visual><geometry><cylinder length="0.08" radius="0.07"/></geometry><material name="black"/></visual>
		<collision><geometry><cylinder length="0.08" radius="0.07"/></geometry></collision>
		<inertial><mass value="0.8"/><inertia ixx="0.01" iyy="0.01" izz="0.01"/></inertial>
	</link>
	<joint name="left_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<!-- place wheel center below base origin so wheel bottom meets ground when robot is loaded at z~0.2 -->
		<origin xyz="0 0.16 -0.14" rpy="-1.5708 0 0"/>
		<axis xyz="0 0 1"/>
	</joint>

	<link name="right_wheel">
		<!-- larger wheel: radius increased to 0.07 -->
		<visual><geometry><cylinder length="0.08" radius="0.07"/></geometry><material name="black"/></visual>
		<collision><geometry><cylinder length="0.08" radius="0.07"/></geometry></collision>
		<inertial><mass value="0.8"/><inertia ixx="0.01" iyy="0.01" izz="0.01"/></inertial>
	</link>
	<joint name="right_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<!-- match left wheel placement -->
		<origin xyz="0 -0.16 -0.14" rpy="-1.5708 0 0"/>
		<axis xyz="0 0 1"/>
	</joint>

	<link name="caster">
		<visual><geometry><sphere radius="0.036"/></geometry><material name="black"/></visual>
		<collision><geometry><sphere radius="0.036"/></geometry></collision>
		<inertial><mass value="0.2"/><inertia ixx="0.001" iyy="0.001" izz="0.001"/></inertial>
	</link>
	<joint name="caster_joint" type="fixed">
	<parent link="base_link"/>
	<child link="caster"/>
	<!-- position caster so it contacts ground (caster radius ~0.036) -->
	<origin xyz="-0.16 0 -0.164" rpy="0 0 0"/>
	</joint>
</robot>
